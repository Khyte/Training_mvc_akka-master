@model TrainingMVC.DATA.Formation
@{
    ViewBag.Title = "Create";
}

<h2>Création d'une formation</h2>

<form method="post">

    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="Nom">Nom</label>
        <input type="text" class="form-control" id="Nom" name="Nom" value="@Model.Nom">
        @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="NomSeo">NomSeo</label>
        <input type="text" class="form-control" id="NomSeo" name="NomSeo" value="@Model.NomSeo">
    </div>

    <div class="form-group">
        <label for="Url">Url</label>
        <input type="text" class="form-control" id="Url" name="Url" value="@Model.Url">
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea type="text" class="form-control" id="Description" name="Description" required>@Model.Description</textarea>
        @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" })
    </div>
    <input type="submit" class="btn btn-success" value="Créer" />
</form>

@Html.ActionLink("Toutes les formations", "index")

