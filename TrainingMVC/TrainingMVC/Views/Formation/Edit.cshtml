@model TrainingMVC.DATA.Formation
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@Html.AntiForgeryToken()

<form method="post">
    <div class="form-group">
        <label for="Nom">Nom</label>
        <input type="text" class="form-control" id="Nom" name="Nom" value="@Model.Nom">
    </div>

    <div class="form-group">
        <label for="NomSeo">NomSeo</label>
        <input type="text" class="form-control" id="NomSeo" name="NomSeo" value="@Model.NomSeo">
    </div>

    <div class="form-group">
        <label for="Url">Url</label>
        <input type="text" class="form-control" id="Url" name="Url" value="@Model.Url">
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea type="text" class="form-control" id="Description" name="Description">
            @Model.Description
        </textarea>
    </div>
    <input type="submit" class="btn btn-success" value="Modifier" />
</form>

@Html.ActionLink("Toutes les formations", "index")
